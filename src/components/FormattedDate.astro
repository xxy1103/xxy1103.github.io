---
interface Props {
	date: Date;
	locale?: string;
}

import { locale as siteLocale } from '../config';

const { date, locale = siteLocale } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
